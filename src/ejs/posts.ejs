<%- include("./partials/header.ejs") %>

<div class="container">
    <div class="row align-items-center d-flex">
        <% posts.forEach((post) => { %>
        <a href="/posts/<%= post.id %>">
            <div class="col-xl-4 col-md-6 col-xs-12">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
            </div>
        </a>
        <% }); %>
    </div>
</div>
<%- include("./partials/footer.ejs") %>
